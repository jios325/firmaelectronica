html
	height:100%
	position relative
body
	position relative
	min-height: 100%
	width:100%
	font-family: Raleway
	overflow-x hidden
a
	text-decoration: none
	color:inherit
	&:hover
		text-decoration: none
p
	color: #727070;
	font-size: 16px;
	line-height: 19px;
.container-fluid
	padding-right: 1rem
	padding-left: 1rem
small
	font-size: 12.5px
.link
	border-bottom: 1px solid #000000
	&--white
		color:#fff
		border-color: #ffffff
body.noscroll
	overflow-y: hidden!important